<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="movie"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster_image" />
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESKRIPSI"
        android:textSize="18dp"
        android:textColor="#50A7B3"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTitle"/>
    <View
        android:id="@+id/garisdesc"
        android:layout_height="1dp"
        android:layout_width="350dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="#44A0A3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc"/>
    <TextView
        android:id="@+id/movervie_tv"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="description"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garisdesc" />

   <TextView
       android:id="@+id/alamat"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="LOKASI"
       android:textSize="18dp"
       android:textColor="#50A7B3"
       android:textStyle="bold"
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/movervie_tv"/>
    <View
        android:id="@+id/garisalamat"
        android:background="#44A0A3"
        android:layout_height="1dp"
        android:layout_width="350dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alamat"/>
    <TextView
        android:id="@+id/nama_daerah"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Nama Daerah"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garisalamat" />
    <TextView
        android:id="@+id/lokasi_tv"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Lokasi"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_daerah" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>